package _4Arreglos;

import java.util.Iterator;
import java.util.Scanner;

public class _8mezcatabla {

	public static void main(String[] args) {
		Scanner entrada = new Scanner(System.in);
		// Leer por teclado 2 tablas de 10 numeros enteros
		// y mezcalrlos en una tercera de la forma
		// 1 a 1 b 2 a 2 b

		//int[] numeroA = new int[3];
		//int[] numeroB = new int[3];
		//int[] numeroC = new int[12];
		int a[],numeroB[],numeroC[]; //c[]
		a = new int[3];
		numeroB = new int[3];
		numeroC = new int[6]; //c=new int [20]
		
		for (int a = 0; a < 3; a++) {
			System.out.println("Digita los elementos del arreglo A");
			a[a] = entrada.nextInt();
		}

		for (int b = 0; b < 3; b++) {
			System.out.println("Digita los elementos del arreglo B");
			numeroB[b] = entrada.nextInt();
		}
		
		int j=0;
		for (int i = 0; i < 3; i++) {
			numeroC[j] = a[i];
			j++;
			numeroC[j] = numeroB[i];
			j++;
		}
		
		for (int c = 0; c < 6; c++) {
			System.out.println("Arreglo A: " + numeroC[c]);
			System.out.println("Arreglo B: " + numeroC[c]);
		}

		System.out.println("***********FIN*************");
	}

}
