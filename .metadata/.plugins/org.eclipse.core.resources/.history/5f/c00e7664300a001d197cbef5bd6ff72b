package _4Arreglos;

import java.util.Scanner;

public class _10Creciente_Decre {

	public static void main(String[] args) {
		
		Scanner entrada = new Scanner(System.in);
		// Leer por teclado una serie de 10 numeros enteroscla aplicacion debe indicarnos si los numeros estan ordenados de forma
		// creciente decreciente o desordenados
		
		int[] a = new int[6];
		for (int i = 0; i < a.length; i++) {
			System.out.print("digita un numero: ");
			a[i] = entrada.nextInt();
		}
		// creciente
		if (a[0] < a.length) {
			for (int i = 0; i < a.length; i++) {				
				System.out.println("El arreglo esta en orden creciente: " + a[i]);
			}
		}
		// decreciente
		if (0 < a[6]) {
			// int i = a.length - 1; i > 0; i--
			for (int i = 0; i < a.length; i++) {				
				System.out.println("El arreglo esta en orden decreciente: " + a[i]);
			}
		}
		/*
		// desordenadosjo
		if (a[0] > a.length != a.length - 1 < 0) {
		
			for (int i = 0; i < a.length; i++) {
				int j = a[i];
				System.out.println("El arreglo esta desordenados: " + j);
			}
		}
		//iguales
		if (a[1] == 1 | a[2] == 2 | a[3] == 3 | a[4] == 4 | a[5] == 5) {
			for (int i = 0; i < a.length; i++) {
				int j = a[i];
				System.out.println("Todos los elementos del arreglo son iguales: " + j);
			}
		}
		*/
		System.out.println("*****FIN*****");
	}
}
